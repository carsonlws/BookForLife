<%= form_for(book) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>

  <div class="field">
    <div id="preview-image">
       <% if @book.image? %>
         <%= image_tag @book.image, class: "img-settings img-responsive center-block" %>
       <% end %>
     </div>

    <%= f.label :image %>
    <%= f.file_field :image, id: "book_image_field", class: 'form-control image-uploader' %>
  </div>


  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= collection_select(:book, :category_id, Category.all, :id, :genre) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
