<div class="container">
    <div class="col-md-12">

      <div class="row thumbnail">
        <span class="col-sm-3 col-lg-3 col-md-3">
          <%= image_tag @book.image %>
        </span>

        <div class="caption">
          <span class="col-sm-9 col-lg-9 col-md-9">
            <h4>  <%= number_to_currency(@book.price, unit: "RM ") %></h4>
            <h4><%= @book.title %></h4>
            <p><%= @book.author %></p>
            <p><%= @book.category.genre %></p>
            <p><%= @book.description %></p>
          </span>
        </div>
          <%= link_to 'Back', books_path, class:"btn btn-info btn-sm" %>
          <%= link_to 'Add To Cart', add_item_to_cart_path(book_id: @book, quantity: 1), method: :patch, class:"btn btn-info btn-sm" %>
      </div>
    </div>
  </div>
</div>
